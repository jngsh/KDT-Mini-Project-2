<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.exam.mapper.GoodsMapper">
 
 
    <!-- 모든 상품 보기-->
    
    <select id="selectAll" resultType="GoodsDTO">
		
		select * from goods
		
	</select>
    
   <!-- 상품목록 -->
   <select id="goodsList" parameterType="string" resultType="GoodsDTO">
     select bookId,
            title,
            author,
            price,
            category,
            publisher,
            imageCode,
            publishDate
     from goods
     where category = #{category}
   </select>


   <!-- 상품 상세 보기 -->
 	<select id="goodsRetrieve" parameterType="string" resultType="GoodsDTO">
     select bookId,
            title,
            author,
            price,
            category,
            publisher,
            imageCode,
            publishDate
     from goods
     where bookId = #{bookId}
   </select>
   
   <!-- 페이징 처리 -->
   
   <select id="getGoodsByCategory" parameterType="map" resultType="GoodsDTO">
        SELECT *
        FROM goods
        WHERE category = #{category}
        LIMIT #{offset}, #{itemsPerPage}
    </select>
    
    <select id="countGoodsByCategory" parameterType="string" resultType="int">
        SELECT COUNT(*)
        FROM goods
        WHERE category = #{category}
    </select>
   <!-- 페이징 처리된 전체 상품 목록 조회 -->
    <select id="selectAllWithPaging" parameterType="map" resultType="GoodsDTO">
        SELECT * FROM goods
        ORDER BY bookId
        LIMIT #{offset}, #{itemsPerPage}
    </select>

   
</mapper>
